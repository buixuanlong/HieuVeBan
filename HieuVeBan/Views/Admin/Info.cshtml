@{
    ViewData["Title"] = "Danh sách tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<main id="table_content" class="app-content">
    @await Component.InvokeAsync("AppTitle")
    <section class="content" style="margin-bottom:25px;">
        <h4>DANH SÁCH THÔNG TIN NGƯỜI DÙNG</h4>
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <form class="row" id="searchForm">
                    <div class="form-group col-md-2">
                        <label>Từ ngày</label>
                        <input class="form-control date-input" id="fromDt" name="fromDt" type="text" />
                    </div>
                    <div class="form-group col-md-2">
                        <label>Đến ngày</label>
                        <input class="form-control date-input" id="toDt" name="toDt" type="text" />
                    </div>
                    <div class="form-group col-md-3 align-self-end">
                        <button class="btn btn-primary" id="searchBtn"><i class="fa fa-fw fa-lg fa-search"></i>Tìm kiếm</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-12">
                <div class="btn-group" role="group">
                    <button class="btn btn-primary" id="exportExcel"><i class="fa fa-excel"></i>Export Excel</button>
                </div>
            </div>
        </div>
        <table id="recordTable" class="table table-striped table-bordered" cellspacing="0" style="width:100%;">
            <thead>
                <tr class="table-header">
                    <th>Họ và Tên</th>
                    <th>Ngày sinh</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th style="min-width: 100px">Thpt</th>
                    <th>Tỉnh / Thành phố</th>
                    <th>Loại đối tượng</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </section>
    <partial name="_FooterPartial" />
</main>
@section Scripts{
    <script src="~/admin/js/module.list-info.js" type="text/javascript" asp-append-version="true"></script>
}



